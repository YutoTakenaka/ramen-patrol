<%= render "shared/header" %>

  <div class="show_page">
    <div class="left_content">
      <div class="left_header">    
        <%= link_to image_tag(@post.user.image ,size: '50x50'),"#",class:"user_icon" %>
        <%= link_to @post.user.nickname, user_path(@post.user.id), class:"user_nickname" %>

        <% if user_signed_in? && current_user.id == @post.user_id %>
          <div class="more">
            <%= image_tag 'show-btn.png',size: '50x50',class: :show_icon %>
            <ul class="more_list">
              <li>
                <%= link_to '編集',edit_post_path(@post.id),method: :get %>
              </li>
              <li>
                <%= link_to '削除',post_path(@post.id), method: :delete, data: { confirm: '本当に削除しますか？' } %>
              </li>
            </ul>
          </div>
        <% end %>
      </div>
      <div class="left_body">
        <div class="ramen_img">
          <%= link_to image_tag(@post.image),"#" %>
        </div>
      </div>
    </div>

    <div class="right_content">
      <div class="ramen_info">
        商品名:<%= @post.ramen_name %>
      </div>
      <div class="ramen_info">
        店名:<%= @post.shop_name %>
      </div>
      <div class="ramen_info">
        場所:<%= @post.place %>
      </div>
      <div class="ramen_info">
        値段:<%= @post.price %>
      </div>
      <div class="ramen_info">
        スープ:<%= @post.soup.name %>
      </div>
      <div class="ramen_info">
        麺の太さ:<%= @post.noodle.name %>
      </div>
      <div class="ramen_info">
        キャプション<br>
        <%= @post.caption %>
      </div>
    </div>

    <div class="actions">
      <%=link_to 'もどる', root_path, class:"back-btn" %>
    </div>
  </div>

<%= render "shared/footer" %>