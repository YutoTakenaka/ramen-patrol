<%= render "shared/header" %>

<div class="user_info">
  <div class="user_info_left">
    <%= link_to image_tag(@user.image ,size: '100x100'), '#',class:"user_icon" %>
  </div>
  <div class="user_info_right">
    <div class="right_user_name">
      <%= @user.nickname %>
      <%= link_to "プロフィールを編集", "#",class: "user_edit" %>
    </div>
    <div class="post_amount">
      <%= "パトロール件数#{@user.posts.length}件" %>
    </div>
  </div>
</div>

<div class="user_post">
  <% @posts.each do |post| %>
     <%= render partial: "posts/ramen", locals: { post: post } %>
  <% end %>
</div>

<%= render "shared/footer" %>